<%= render 'partials/header' %>
<section>
    <div id="filter">
        <h3>Order:</h3>
        <select>
            <option value="Alphabetically">Alphabetically</option>
            <option value="Newest">Newest</option>
            <option value="Oldest">Oldest</option>
            <option value="Lowest Price">Lowest Price</option>
            <option value="Highest Price">Highest Price</option>
        </select>
        <h3>Filter By:</h3>
        <select>
            <option value="New">None</option>
            <option value="New">New</option>
            <option value="New">On Sale</option>
        </select>
    </div>

    <%= form_tag filter_results_path, method: :get do %>
        <!-- <%= select_tag :filter_by, options_from_collection_for_select(Category.all, "id", "name" ) %> -->
        <%= select_tag :filter_by, options_from_collection_for_select(Category.all, 'name', 'name')%>
        <%= submit_tag 'Filter'%>
    <% end %>

    <!-- Search functionality-->
    <%= form_tag search_results_path, method: :get do %>
        <%= text_field_tag :search_keywords %>
        <%= submit_tag 'Search'%>
    <% end %>

    <%= render 'partials/boardgames' %>
    <%= paginate @games %>
</section>
